<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.shopmanage.controllers.RegisterController"
            prefWidth="400" prefHeight="500">

    <children>
        <Label text="Inscription" layoutX="150" layoutY="20" style="-fx-font-size: 24px; -fx-font-weight: bold;"/>

        <!-- Username -->
        <Label text="Nom d'utilisateur:" layoutX="50" layoutY="70"/>
        <TextField fx:id="usernameField" layoutX="160" layoutY="65" prefWidth="180"/>

        <!-- Email -->
        <Label text="Email:" layoutX="50" layoutY="120"/>
