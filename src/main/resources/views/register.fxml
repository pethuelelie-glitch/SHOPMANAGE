        <!-- Full Name -->
        <Label text="Nom complet:" layoutX="50" layoutY="170"/>
        <TextField fx:id="fullNameField" layoutX="160" layoutY="165" prefWidth="180"/>

        <!-- Password -->
        <Label text="Mot de passe:" layoutX="50" layoutY="220"/>
        <PasswordField fx:id="passwordField" layoutX="160" layoutY="215" prefWidth="180"/>

        <!-- Confirm Password -->
        <Label text="Confirmer mot de passe:" layoutX="50" layoutY="270"/>
        <PasswordField fx:id="confirmPasswordField" layoutX="160" layoutY="265" prefWidth="180"/>

        <!-- Role -->
        <Label text="RÃ´le:" layoutX="50" layoutY="320"/>
        <ComboBox fx:id="roleComboBox" layoutX="160" layoutY="315" prefWidth="180"/>

        <!-- Message Label -->
        <Label fx:id="messageLabel" layoutX="50" layoutY="370" prefWidth="290" wrapText="true"/>

        <!-- Bouton register -->
        <Button fx:id="registerButton" text="S'inscrire" layoutX="140" layoutY="410" prefWidth="120" onAction="#onRegisterClicked"/>
    </children>
</AnchorPane>
